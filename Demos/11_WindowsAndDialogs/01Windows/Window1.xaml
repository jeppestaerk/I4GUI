<Window x:Class="_01Windows.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WindowLook" Width="500"  Height="400">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>ResizeMode</Label>
            <ComboBox SelectedIndex="2" Name="resizeCombo">
                <ComboBoxItem>NoResize</ComboBoxItem>
                <ComboBoxItem>CanMinimize</ComboBoxItem>
                <ComboBoxItem>CanResize</ComboBoxItem>
                <ComboBoxItem>CanResizeWithGrip</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <CheckBox Name="modalCheckBox">Show Modally</CheckBox>
        <Button Click="button_Click">None</Button>
        <Button Click="button_Click">SingleBorderWindow</Button>
        <Button Click="button_Click">ThreeDBorderWindow</Button>
        <Button Click="button_Click">ToolWindow</Button>
        <Button Click="button2_Click">Size and Location Tracking Window</Button>
    </StackPanel>
</Window>
