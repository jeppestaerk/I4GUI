<Window x:Class="_01_ResourceInXAML.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    Title="Window 01" Height="300" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="myBrush" Color="Green" />
        <s:String x:Key="HW">Hello, world</s:String>
    </Window.Resources>
    <Grid>
        <Button Background="{StaticResource myBrush}" Content="Click Me"/>
    </Grid>
</Window>
