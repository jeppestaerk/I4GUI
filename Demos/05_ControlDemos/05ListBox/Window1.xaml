<Window x:Class="ListBox.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListBox Example" Height="300" Width="300"
        FontSize="16">
    <Grid>
        <ListBox Name="listBox1" 
                 Height="190" Width="152"
                 Margin="10,13,0,0"
                 VerticalAlignment="Top" HorizontalAlignment="Left" SelectionChanged="listBox1_SelectionChanged" />
        <Button Content="Add Item" 
                HorizontalAlignment="Left" 
                Margin="39,218,0,0" 
                Name="button1" 
                VerticalAlignment="Top" 
                Padding="10,3" 
                Click="button1_Click" 
                />
    </Grid>
</Window>
