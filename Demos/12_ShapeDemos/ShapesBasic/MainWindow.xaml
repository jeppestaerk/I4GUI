<Window x:Class="ShapesBasic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="63*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0.4,-0.2" Grid.RowSpan="2">
            <Ellipse Fill="Yellow" Stroke="Blue"
                     Height="50" Width="100" Margin="5"
                     HorizontalAlignment="Left"
                     />
            <Rectangle Fill="Green" Stroke="Blue"
                       Height="50" Width="100" Margin="5"
                       HorizontalAlignment="Left"
                       />
        </StackPanel>
        <Canvas Grid.Row="1">
            <Line Stroke= "Red" X1="0" Y1="0" X2="100" Y2="100" />
        </Canvas>

    </Grid>
</Window>
